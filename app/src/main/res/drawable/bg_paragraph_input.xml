            <padding android:bottom="8dp" android:top="8dp" android:left="16dp" android:right="16dp" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/grey" android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
